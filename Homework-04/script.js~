var pic = document.getElementById("vimg");
var mbutton = document.getElementById("Expand");

var drawC = function(){
    var c = document.createElementNS("http://www.w3.org/2000/svg", "circle");
    c.setAttribute("cx", 0);
    c.setAttribute("cy", 0);
    c.setAttribute("r", "1");
    c.setAttribute("fill", "red");
    c.setAttribute("stroke", "black");

    pic.appendChild(c);
};
var animate = function(){
    drawC();
    var c = document.getElementsByTagName("circle")[0];
    var x = parseInt(c.getAttribute("cx"));
    var a = function(){
	x += 1;
	c.setAttribute("cx",x);
    };
    windows.setInterval(a,500);
    
};

mbutton.addEventListener("click",animate);
