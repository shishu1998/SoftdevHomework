var slidenum = 0;
var head = ["<font size = '32'>Press Next to start the Presentation</font>","<font size = '32'>Brief History</font>","<font size = '32'>What are websockets?</font>","<font size = '32'>How do websockets work?</font>","<font size = '32'>Why websockets?</font>","<font size = '32'>Applications of Websocket</font>","<font size = '32'>Disadvantages</font>"];
var text = ["<font size = '24'>Information will appear here</font>","<font size = '24'>Before the invention of websockets, the internet was a boring place.There was no dynamic interaction between user and the web browser, and people only needed to send requests and get stuff done.However, with the introduction of AJAX, internet become more dynamic and there was the possibility of bidirectional communication.This communication wasn't truly in real time, so what can we ever do?</font>","","","",""];

var load = function(){
    d3.selectAll("h2")
	.html(head[slidenum])
    d3.selectAll("h3")
	.html(text[slidenum])
}

var prevslide = function(){
    if(slidenum > 0){
	slidenum --;
	load();
    }
}

var nextslide = function(){
    if(slidenum < 6){
	slidenum ++;
	load();
    }
}

window.addEventListener("load",load);
var n = document.getElementById("next");
var p = document.getElementById("prev");
n.addEventListener("click",nextslide);
p.addEventListener("click",prevslide);
